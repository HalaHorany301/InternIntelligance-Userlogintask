@model logintask.Models.LoginViewModel
<link href="~/css/login.css" rel="stylesheet" />
@{
    Layout = null;
    ViewData["Title"] = "Login";

}

<div class="container">
 
    <div class="form-box login">
        <form asp-action="Login">
            <h1>Login</h1>
            <div class="col-md-4">
                
                  
                    <div class="form-group input1">

                        <input asp-for="UserNameOrEmail" class="form-control" placeholder="Username Or Email" />
                        <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group input1">

                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
             
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-center">
                    <a asp-controller="Home" asp-action="Index" class="mt-3" style="text-decoration:none; color:black; font-size:16px">Back</a>
                </div>

               
            </div>
           
        </form>
     

    </div>
     <div class="toggle-box">
         <div class="toggle-panel toggle-left">
          <h1>Hello, Welcome!</h1>
            <p>Dont have an account?</p>
            <button class="btn register-btn"><a asp-action="Registration" style="text-decoration:none; color:#fff;">Register</a></button>
        </div>
     </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
