@model logintask.Models.RegistrationViewModel
<link href="~/css/register.css" rel="stylesheet" />
@{
    Layout = null;
    ViewData["Title"] = "Registration";
}


<div class="container">
    <div class="form-box register">
        <form asp-action="Registration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if(ViewBag.Massege !=null)
            {
                <div class="form-group" style="color:green">@ViewBag.Massege</div>
            }
            <div class="form-group input1">
                
                <input asp-for="FirstName" class="form-control" placeholder="First Name"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group input1">
               
                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group input1">
               
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group input1">
             
                <input asp-for="UserName" class="form-control" placeholder="User Name" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group input1">
            
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group input1">
       
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
           
        </form>
    </div>
    <div class="toggle-box">
        <div class="toggle-panel toggle-">
            <h1>Welcome Back!</h1>
            <p>Already have an account?</p>
            <button class="btn login-btn"><a asp-action="Login" style="text-decoration:none; color:#fff;">Login</a></button>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
